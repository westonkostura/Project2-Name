
     <div class="custom-container">
        <h1 class="text-center m-4 text-success">Pin-It</h1>
        <div class="jumbotron">
            <h3 class="text-center text-primary">Registration Form</h3>
            <br>
            {{!-- Display errors --}}
            {{!-- if condition --}}
            {{#if errors}}
                {{!-- Foreach loop --}}
                {{#each errors}}
                    <div class="alert alert-danger alert-dismissible fade show">
                        <strong>{{msg}}</strong>
                        <button class="close" data-dismiss="alert"><span>&times;</span></button>
                    </div>
                {{/each}}
                {{!-- End Foreach loop--}}
            {{/if}}
            {{!-- End If Condition --}}
            
            <form  id="registration">
                <div class="form-group">
                    <label for="fname">User Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="name-signup" name="fname" placeholder="Enter Your User Name" value="{{uname}}">
                </div>  
               <div class="form-group">
                    <label for="email">Email Id <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="email" id="email-signup" placeholder="Enter your email" value="{{email}}">
                </div>
                <div class="form-group">
                    <label for="password">Password <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="password" id="password-signup" placeholder="Enter Your Password"value="{{password}}">
                </div>
                <div class="form-group">
                    {{!-- <label for="cpassword">Confirm Password <span class="text-danger">*</span></label> --}}
                    {{!-- <input type="password" class="form-control" name="cpassword" id="" placeholder="Enter Same as Password" value="{{cpassword}}"> --}}
                </div>
                <div class="form-group">
                    <input type="submit" value="Register" class="btn btn-info btn-block">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-8">
                            Already user? Login <a href="/">here</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

<script src="./js/register.js">
    
</script>

